<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="#1417DD"
                android:id="@+id/background_user"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <ImageButton
                android:id="@+id/btn_change_user_background_image"
                android:background="@drawable/icon_camera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/background_user"
                android:layout_alignRight="@+id/background_user"
                android:layout_margin="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="-75dp"
                android:layout_below="@+id/background_user"
                app:cardCornerRadius="100dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:id="@+id/user_avata"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            </androidx.cardview.widget.CardView>
            <ImageButton
                android:id="@+id/btn_change_user_avata"
                android:background="@drawable/icon_camera"
                android:elevation="9dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/cardview"
                android:layout_alignRight="@+id/cardview" />
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="2">
                <TextView
                    android:id="@+id/full_name"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/phone_number"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>